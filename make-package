PACKAGE="rspsim5-`date -u +%Y%m%d-%H%M%S`"

cd /tmp && \
rm -rf rspsim5 && \
svn co https://svn1.tdr.iem.uni-due.de/svn/omnetpp/trunk/rspsim5 && \
rm rspsim5/make-package && \
tar czvf $PACKAGE.tar.gz rspsim5 && \
echo "DONE. Package is /tmp/$PACKAGE.tar.gz"
