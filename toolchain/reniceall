if [ $# -ne 2 ] ; then
   echo "reniceall [Program] [Priority, e.g. 10]"
   exit 1
fi

ps ax -o "%p %c" | grep $1 | awk '{print $1}' | tee | xargs --no-run-if-empty sudo renice $2
